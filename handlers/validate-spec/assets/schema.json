{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "format_version",
        "generated_at_timestamp",
        "steplib_source",
        "download_locations",
        "assets_download_base_uri",
        "steps"
    ],
    "additionalProperties": false,
    "properties": {
        "format_version": {
            "type": "string",
            "pattern": "^[0-9]*.[0-9]*.[0-9]*$",
            "examples": ["1.0.0"]
        },
        "generated_at_timestamp": {
            "type": "integer",
            "examples": [1584720375]
        },
        "steplib_source": {
            "type": "string",
            "examples": ["https://github.com/bitrise-io/bitrise-steplib.git"]
        },
        "download_locations": {
            "type": "array",
            "items": {
                "type": "object",
                "examples": [
                    {
                        "src": "https://bitrise-steplib-collection.s3.amazonaws.com/step-archives/",
                        "type": "zip"
                    },
                    {
                        "src": "source/git",
                        "type": "git"
                    }
                ],
                "required": [
                    "type",
                    "src"
                ],
                "additionalProperties": false,
                "properties": {
                    "type": {
                        "type": "string",
                        "examples": ["zip"]
                    },
                    "src": {
                        "type": "string",
                        "examples": ["https://bitrise-steplib-collection.s3.amazonaws.com/step-archives/"]
                    }
                }
            }
        },
        "assets_download_base_uri": {
            "type": "string",
            "examples": ["https://bitrise-steplib-collection.s3.amazonaws.com/steps"]
        },
        "steps": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "required": [
                    "info",
                    "latest_version_number",
                    "versions"
                ],
                "additionalProperties": false,
                "properties": {
                    "info": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "removal_date": {
                                "type": "string"
                            },
                            "deprecate_notes": {
                                "type": "string"
                            },
                            "asset_urls": {
                                "type": "object",
                                "additionalProperties": false,
                                "maxProperties": 2,
                                "properties": {
                                    "icon.svg": {
                                        "type": "string"
                                    },
                                    "icon.png": {
                                        "type": "string"
                                    }
                                }
                            },
                            "maintainer": {
                                "type": "string"
                            }
                        }
                    },
                    "latest_version_number": {
                        "type": "string",
                        "pattern": "^[0-9]*.[0-9]*.[0-9]*$",
                        "examples": ["1.0.0"]
                    },
                    "versions": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["title", "summary", "website", "source_code_url", "support_url", "published_at", "source", "type_tags"],
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "summary": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "website": {
                                    "type": "string"
                                },
                                "source_code_url": {
                                    "type": "string"
                                },
                                "support_url": {
                                    "type": "string"
                                },
                                "published_at": {
                                    "type": "string",
                                    "format": "date-time"
                                },
                                "source": {
                                    "type": "object",
                                    "required": ["git", "commit"],
                                    "additionalProperties": false,
                                    "properties": {
                                        "git": {
                                            "type": "string"
                                        },
                                        "commit": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "asset_urls": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "maxProperties": 2,
                                    "properties": {
                                        "icon.svg": {
                                            "type": "string"
                                        },
                                        "icon.png": {
                                            "type": "string"
                                        }
                                    }
                                },
                                "host_os_tags": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "project_type_tags": {
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": {
                                        "type": "string",
                                        "enum": ["ios", "macos", "android", "xamarin", "react-native", "cordova", "ionic", "flutter", "web"]
                                    }
                                },
                                "type_tags": {
                                    "type": "array",
                                    "minItems": 1,
                                    "maxItems": 1,
                                    "items": {
                                        "type": "string",
                                        "enum": ["access-control", "artifact-info", "installer", "deploy", "utility", "dependency", "code-sign", "build", "test", "notification"]
                                    }
                                },
                                "dependencies": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": ["manager", "name"],
                                        "properties": {
                                            "manager": {
                                                "type": "string"
                                            },
                                            "name": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "toolkit": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "bash": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": ["entry_file"],
                                            "properties": {
                                                "entry_file": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "go": {
                                            "type": "object",
                                            "additionalProperties": false,
                                            "required": ["package_name"],
                                            "properties": {
                                                "package_name": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                },
                                "deps": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "properties": {
                                        "brew": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "bin_name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "apt_get": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "bin_name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "check_only": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": ["name"],
                                                "properties": {
                                                    "name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "is_requires_admin_user": {
                                    "type": "boolean"
                                },
                                "is_always_run": {
                                    "type": "boolean"
                                },
                                "is_skippable": {
                                    "type": "boolean"
                                },
                                "run_if": {
                                    "type": "string"
                                },
                                "timeout": {
                                    "type": "integer"
                                },
                                "meta": {
                                    "type": "object"
                                },
                                "inputs": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": ["opts"],
                                        "minProperties": 2,
                                        "maxProperties": 2,
                                        "properties": {
                                            "opts": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "is_expand": {
                                                        "type": "boolean"
                                                    },
                                                    "skip_if_empty": {
                                                        "type": "boolean"
                                                    },
                                                    "title": {
                                                        "type": "string"
                                                    },
                                                    "description": {
                                                        "type": "string"
                                                    },
                                                    "summary": {
                                                        "type": "string"
                                                    },
                                                    "category": {
                                                        "type": "string"
                                                    },
                                                    "value_options": {
                                                        "type": "array",
                                                        "minProperties": 2,
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "is_required": {
                                                        "type": "boolean"
                                                    },
                                                    "is_dont_change_value": {
                                                        "type": "boolean"
                                                    },
                                                    "is_template": {
                                                        "type": "boolean"
                                                    },
                                                    "is_sensitive": {
                                                        "type": "boolean"
                                                    },
                                                    "unset": {
                                                        "type": "boolean"
                                                    },
                                                    "meta": {
                                                        "type": "object"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                },
                                "outputs": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": ["opts"],
                                        "minProperties": 2,
                                        "maxProperties": 2,
                                        "properties": {
                                            "opts": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "is_expand": {
                                                        "type": "boolean"
                                                    },
                                                    "skip_if_empty": {
                                                        "type": "boolean"
                                                    },
                                                    "title": {
                                                        "type": "string"
                                                    },
                                                    "description": {
                                                        "type": "string"
                                                    },
                                                    "summary": {
                                                        "type": "string"
                                                    },
                                                    "category": {
                                                        "type": "string"
                                                    },
                                                    "value_options": {
                                                        "type": "array",
                                                        "minProperties": 2,
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "is_required": {
                                                        "type": "boolean"
                                                    },
                                                    "is_dont_change_value": {
                                                        "type": "boolean"
                                                    },
                                                    "is_template": {
                                                        "type": "boolean"
                                                    },
                                                    "is_sensitive": {
                                                        "type": "boolean"
                                                    },
                                                    "unset": {
                                                        "type": "boolean"
                                                    },
                                                    "meta": {
                                                        "type": "object"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
	}
}